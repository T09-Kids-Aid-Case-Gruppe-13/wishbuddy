            <h4>2500</h4>
            <h5>Timer</h5>
            <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
        </div>
    </div>
    <img class="section_img" src="/public/img/magician_.webp" alt="image1">
</section>
<img class="bottom_transition" src="/public/img/svg/section1_bottom_trasition.png" alt="">


<style>
    h2{
        font-family: "mansalva";
        font-size: 2rem;
        text-align: center;
    }
    p{
        font-family: "montserrat", sans-serif;
        font-size: .8rem;
        text-align: center;
        max-width: 65ch;
        margin: auto;
    }

    .text-box{
        margin: auto;
    }

    .hero{
        /* background-color: #DDC1FF; */
        /* padding: 100px 0; */

        display: grid;
        place-items: center;
    }

    #background_video{
       grid-area: 1 /1; 
       width: 100%;
       object-fit: cover;
       z-index: -1;
       background-position: fixed;
    }
    .hero .text-box{
        grid-area: 1 /1;
        color: #fff;
    }
    .mascot{
        max-width: 300px;
        margin: auto;
        display: block;
    }
    .stot_button{
        margin: auto;
        display: flex;
        justify-content: center;
        padding: 25px;
    }
    .top_transition, .bottom_transition{
        width: 100%;
    }

    section{
        background-color: #D5B2FF;
        padding: 50px;
        margin-top: -10px;
        color: #303030;
    }

    h4, h5{
        font-family: "montserrat", sans-serif;
    }
    h4{
        font-size: 2rem;
        color: #623598;
        /* A26EF4 */
    }
    .stats{
        display: flex;
        flex-direction: column;
        gap: 30px;
        justify-content: center;
        text-align: left;
        /* color: #623598; */
        color: #303030;
        margin: 50px 0;
        /* scale:.5; */
    }
    .stats-info{
        display: flex;
        flex-direction: column;
        gap: 5px;
        text-align: left;
    }
    .stats-info p{
        font-size: .8rem;
        text-align: left;
        margin: 0;
    }
    .veritcal-line{
        border-left: 3px solid #303030;
        display: none;
    }
    .top_transition{
        margin-top: -150px;
    }
    .bottom_transition{
        margin-bottom: -10px;
    }

    .section_img{
        display: block;
        max-width: 100%;
        margin: 50px auto;
        border-radius: 25px;
    }

    /* ------------------------------------
    ----------------DESKTOP --------------- 
    ---------------------------------------*/
@media (min-width: 600px){
    .stats{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        text-align: center;
        /* color: #623598; */
        color: #303030;
        margin: 50px 0;
        /* scale:.5; */
    }
    h2{
        font-size: 46px;
    }
    h4{
        font-size: 52px;
    }
    h5{
        font-size: 24px;
        font-weight: 700;
    }
    p{
        font-size: 24px;
        max-width: 55ch;
    }
    .stats{
        margin: 100px 0;
    }
    .stats-info p{
        font-size: 18px;
        max-width: 25ch;
    }
    .hero p{
        text-align: center;
        
    }
    .section_img{
        max-width: 80%;
    }

}

</style>

